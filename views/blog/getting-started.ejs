<script>
document.getElementById('skoolForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const email = document.getElementById('emailInput').value;
    const button = this.querySelector('button');
    const buttonText = button.querySelector('.button-text');
    const spinner = button.querySelector('.loading-spinner');
    const messageDiv = document.getElementById('formMessage');
    
    // Show loading state
    buttonText.classList.add('hidden');
    spinner.classList.remove('hidden');
    button.disabled = true;
    
    try {
        const response = await fetch('/api/skool-webhook', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ email })
        });

        const data = await response.json();

        if (response.ok) {
            messageDiv.textContent = 'Success! Check your email for the VNS Guidebook and group access.';
            messageDiv.className = 'form-message success';
            document.getElementById('emailInput').value = '';
        } else {
            throw new Error(data.error || 'Network response was not ok');
        }
    } catch (error) {
        messageDiv.textContent = 'Sorry, there was an error. Please try again later.';
        messageDiv.className = 'form-message error';
        console.error('Error:', error);
    } finally {
        // Reset button state
        buttonText.classList.remove('hidden');
        spinner.classList.add('hidden');
        button.disabled = false;
    }
});
</script>

