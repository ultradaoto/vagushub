<%- include('../partials/header') %>

<main class="max-w-7xl mx-auto px-4 py-16 md:py-24">
    <header class="text-center space-y-4 mb-20">
        <h1 class="text-4xl md:text-6xl font-bold text-vagus-dark leading-tight">Client <span class="text-vagus-primary">Testimonials</span></h1>
        <p class="text-xl text-vagus-muted max-w-3xl mx-auto leading-relaxed">
            Real stories of transformation from the Vagus Nerve Stimulation & Repair Program.
        </p>
        <div class="w-24 h-1.5 bg-vagus-primary mx-auto rounded-full mt-8"></div>
    </header>

    <section class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center mb-24">
        <div class="relative group">
            <div class="absolute -inset-1 bg-gradient-to-r from-vagus-primary to-vagus-blue rounded-3xl blur opacity-20"></div>
            <img src="/images/blog/testimonials.jpg" alt="Testimonials Overview" class="relative rounded-3xl shadow-2xl w-full h-[400px] object-cover">
        </div>

        <div class="space-y-8">
            <h2 class="text-3xl font-bold text-vagus-dark leading-tight text-center lg:text-left">Life-Changing Results</h2>
            <p class="text-lg text-vagus-muted leading-relaxed">Since 2018, the Vagus Nerve Stimulation & Repair Program has helped hundreds of individuals regain their health. By combining cutting-edge ultrasound technology with personalized coaching, we've seen breakthroughs in cases that traditional medicine often struggles to address.</p>
            
            <div class="bg-vagus-soft border-l-4 border-vagus-primary p-6 rounded-r-2xl space-y-2">
                <p class="font-bold text-vagus-dark italic">"I finally feel like myself again. The fog is gone."</p>
                <p class="text-sm text-vagus-muted">— Program Graduate</p>
            </div>

            <div class="pt-6 text-center lg:text-left">
                <a href="/getting-started" class="bg-vagus-blue text-white font-bold py-4 px-10 rounded-2xl shadow-lg hover:bg-blue-600 transition-all duration-300">
                    How it Works →
                </a>
            </div>
        </div>
    </section>

    <!-- Video Testimonials Grid -->
    <h2 class="text-3xl font-bold text-vagus-dark mb-12 text-center">Video Success Stories</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-24">
        <% const videoTestimonials = [
            { title: 'Penni Caldwell', id: 'ItnIDgQw3-Y' },
            { title: 'Marci Grice', id: 'NasUK6Vm_9Q' },
            { title: 'Lynn Breaden', id: 'yLAfVnZzf20' },
            { title: 'Recovery Story 1', id: '-PK6iYtkyII' },
            { title: 'Recovery Story 2', id: 'y0I9uQkszb8' },
            { title: 'Recovery Story 3', id: 'msyVyOi4r4E' }
        ] %>

        <% videoTestimonials.forEach(video => { %>
            <article class="space-y-4">
                <div class="aspect-video rounded-2xl overflow-hidden shadow-md border border-vagus-border hover:shadow-xl transition-shadow duration-300">
                    <iframe class="w-full h-full" src="https://www.youtube.com/embed/<%= video.id %>?autoplay=0&modestbranding=1&controls=1&showinfo=0&rel=0&hd=1" frameborder="0" allowfullscreen></iframe>
                </div>
                <h3 class="text-center font-bold text-vagus-dark uppercase tracking-widest text-sm"><%= video.title %></h3>
            </article>
        <% }) %>
    </div>

    <!-- Written Results Section -->
    <section class="bg-vagus-soft rounded-[3rem] p-12 md:p-20 border border-vagus-border shadow-sm mb-24">
        <div class="text-center space-y-6 mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-vagus-dark">Direct Feedback from Clients</h2>
            <p class="text-xl text-vagus-muted max-w-2xl mx-auto">Real results from our private community and coaching sessions.</p>
        </div>

        <div class="columns-1 md:columns-2 lg:columns-3 gap-8 space-y-8">
            <% const images = [
                'Bernie-little-efort-for-massive-results-1.png',
                'Karla-antihistamine-sleep-meds-stopped-1.png',
                'Karla-the-machine-reading-more-books-1.png',
                'Sofi-best-decisions-this-year-1.png',
                'Kassandra-Promotion-2.png',
                'Karla-less-triggered-1.png',
                'Karla-suicidal-thoughts-best-month-ever-1.png',
                'Maia-Client-Result-reduction-in-Sugar-Cravings.png'
            ] %>

            <% images.forEach(img => { %>
                <div class="break-inside-avoid bg-white p-4 rounded-2xl border border-vagus-border shadow-sm hover:shadow-xl transition-shadow duration-300">
                    <img src="/images/blog/<%= img %>" alt="Client Feedback" class="w-full rounded-xl">
                </div>
            <% }) %>
        </div>
    </section>

    <!-- Final CTA -->
    <div class="bg-vagus-blue rounded-[3rem] p-12 md:p-20 text-center text-white space-y-8 shadow-2xl relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -mr-32 -mt-32 blur-3xl"></div>
        <div class="relative space-y-4">
            <h2 class="text-4xl font-bold mt-0">Is Your Story Next?</h2>
            <p class="text-xl opacity-90 max-w-xl mx-auto text-white">We operate by application only to ensure we can provide the highest level of care to every student.</p>
        </div>
        <div class="relative pt-6">
            <a href="https://www.skool.com/vagus/classroom/f927d70f?md=2d6de18272354147a2977d3e7cc1eb30" 
               class="inline-block bg-white text-vagus-blue font-bold py-6 px-12 rounded-2xl shadow-xl hover:bg-vagus-soft hover:-translate-y-1 transition-all duration-300 text-xl">
               Apply for the Program Now
            </a>
            <p class="text-sm opacity-80 mt-6 font-medium uppercase tracking-widest">Join 1,000+ Others on Skool</p>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
