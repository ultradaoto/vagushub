<%- include('partials/header') %>

<main class="contact-page">
    <section class="hero">
        <h1>Get Support</h1>
        <p>Choose the option that fits how you’d like to connect.</p>
    </section>

    <section class="support-cards">
        <article class="support-card">
            <a href="https://www.skool.com/vagus/about">
                <img src="/images/vagusskoolhero.jpg" alt="Vagus Skool — Free Community" class="card-hero">
            </a>
            <div class="card-body">
                <h2>Vagus Skool (Free Community)</h2>
                <p>Join thousands learning about vagus nerve stimulation. Access the Welcome Guide, beginner-friendly modules, and community support.</p>
                <a class="btn primary" href="https://www.skool.com/vagus/about">Enter Vagus Skool</a>
            </div>
        </article>

        <article class="support-card">
            <a href="https://www.skool.com/ultra/about">
                <img src="/images/ultraskoolhero.jpg" alt="Ultra Skool — Direct 1:1 Support" class="card-hero">
            </a>
            <div class="card-body">
                <h2>Ultra Skool — Direct 1:1 Access</h2>
                <p>Message Sterling directly, get personalized guidance, and access premium training on ultrasound and advanced protocols.</p>
                <a class="btn outline" href="https://www.skool.com/ultra/about">Join Ultra Skool — <%= typeof ultraPrice !== 'undefined' ? ultraPrice : 'Monthly Subscription' %></a>
            </div>
        </article>
    </section>
</main>

<%- include('partials/footer') %> 

<style>
.support-cards{display:grid;grid-template-columns:repeat(auto-fit,minmax(280px,1fr));gap:18px;margin:12px 0 24px}
.support-card{background:#fff;border:1px solid var(--border);border-radius:16px;overflow:hidden;box-shadow:0 12px 32px rgba(2,24,43,.06)}
.support-card{transition:transform .25s ease, box-shadow .25s ease}
.support-card:has(a:focus-visible),
.support-card:hover{transform:translateY(-6px);box-shadow:0 22px 48px rgba(2,24,43,.12)}
.card-hero{display:block;width:100%;height:auto;aspect-ratio:16/9;object-fit:cover}
.card-hero{transition:transform .25s ease}
.support-card:hover .card-hero{transform:scale(1.02)}
.card-body{padding:16px}
.card-body h2{margin:6px 0 8px;color:var(--text-dark)}
.card-body p{margin:0 0 12px;color:var(--muted)}
.btn{display:inline-block;padding:12px 16px;border-radius:12px;text-decoration:none}
.btn.primary{background:var(--primary);color:#fff;box-shadow:0 6px 18px rgba(14,165,233,.16)}
.btn.outline{border:1px solid var(--border);color:var(--text-dark);background:#fff}
.btn.outline:hover{background:#f8fafc}
</style>