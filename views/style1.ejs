<style>
:root{--bg:#fcfdfd;--fg:#162233;--muted:#5b6b80;--primary:#0ea5e9;--border:#e6edf3;--soft:#f4f9fc}
.style-prototype.one{max-width:1040px;margin:0 auto;padding:40px;position:relative}
.style-prototype.one:before{content:"";position:absolute;inset:-120px -40px auto -40px;height:260px;background:radial-gradient(600px 180px at 20% 20%, #e6f6ff 0%, rgba(230,246,255,0) 70%);pointer-events:none;z-index:-1}
.hero{padding:56px 0;border-bottom:1px solid var(--border)}
.hero .content{max-width:760px}
.badges{display:flex;gap:8px;flex-wrap:wrap;margin:0 0 10px}
.badge{background:var(--soft);border:1px solid var(--border);color:var(--muted);padding:6px 10px;border-radius:999px;font-size:12px}
.hero h1{font-size:44px;line-height:1.12;color:var(--fg);margin:0}
.accent{height:6px;width:140px;border-radius:6px;background:linear-gradient(90deg,var(--primary),#7dd3fc);margin:14px 0 18px}
.hero p{color:var(--muted);font-size:18px;margin:0 0 24px}
.btn{display:inline-block;padding:12px 18px;border-radius:12px;text-decoration:none;box-shadow:0 6px 18px rgba(14,165,233,.22)}
.btn.primary{background:var(--primary);color:#fff}
.grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));gap:18px;padding:28px 0}
.card{background:#fff;border:1px solid var(--border);border-radius:16px;padding:20px;box-shadow:0 10px 30px rgba(2,24,43,.05)}
.card h3{margin:0 0 8px;color:var(--fg)}
.card p{margin:0;color:var(--muted)}
.callout{background:linear-gradient(180deg,#ffffff, #f9fbfd);border:1px solid var(--border);border-radius:16px;padding:24px;margin:6px 0 8px}
.callout h2{margin:0 0 8px;color:var(--fg)}
.callout p{margin:0;color:var(--muted)}
</style>

